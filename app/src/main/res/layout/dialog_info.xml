<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mini_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:civ_border_width="2dp"
        android:src="@color/colorGreen"
        app:civ_border_color="#FF000000"/>
    <TextView
        android:id="@+id/text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:padding="3dp"
        android:layout_marginLeft="5dp"
        android:textStyle="italic"
        android:layout_toRightOf="@+id/mini_img"/>
    <TextView
        android:id="@+id/text_width"
        android:padding="3dp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mini_img"
        android:text="width: 35dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_height"
        android:padding="3dp"
        android:layout_marginLeft="5dp"
        android:text="height: 35dp"
        android:layout_below="@id/text_width"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/text_ref"
        android:text="ref: ..."
        android:layout_below="@id/text_height"/>
</RelativeLayout>